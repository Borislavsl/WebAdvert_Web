@model WebAdvert_Web.Models.Accounts.ForgotPasswordModel

<div class="row">
    <div class="col-md-7">
        <h5 class="alert alert-info">
            Enter the email address, where you will receive a verification code
        </h5>
        <form method="post" asp-controller="Accounts" asp-action="ForgotPassword">
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit">Send me a Code</button>
        </form>
    </div>
</div>

